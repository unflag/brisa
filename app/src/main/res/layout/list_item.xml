<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:id="@+id/text_view_subject"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_subject"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="30dp"
        android:maxLines="@integer/MAX_LINES_DEFAULT"
        android:id="@+id/text_view_text"/>
    <View
        android:layout_width="128dp"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_view_text"
        android:id="@+id/separator_right"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_right"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_view_level"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_right"
        android:layout_centerInParent="true"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:id="@+id/expand_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_right"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/text_view_timestamp"/>
</RelativeLayout>